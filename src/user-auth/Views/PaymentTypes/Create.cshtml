@model user_auth.ViewModels.PaymentTypeView

@{
    ViewData["Title"] = "New Payment Type";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Product</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.Hidden("NewPaymentType.UserId", Model.getLoggedInUserId())
        <div class="form-group">
            <label asp-for="NewPaymentType.Description" class="col-md-2 control-label">Payment Type Name</label>
            <div class="col-md-10">
                <input asp-for="NewPaymentType.Description" class="form-control" />
                <span asp-validation-for="NewPaymentType.Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NewPaymentType.AccountNumber" class="col-md-2 control-label">Account Number</label>
            <div class="col-md-10">
                <input asp-for="NewPaymentType.AccountNumber" class="form-control" />
                <span asp-validation-for="NewPaymentType.AccountNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save Payment Type" asp-controller="Cart" asp-action="Index" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-controller="Cart" asp-action="Index">Back to Order</a>
</div>