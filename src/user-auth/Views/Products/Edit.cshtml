@model user_auth.ViewModels.ProductEdit

@{
    ViewData["Title"] = "Edit Product";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="POST">
    <div class="form-horizontal">
        <hr>
        <div class="form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="CurrentProduct.Name" class="col-md-2 control-label">Product Name</label>
                <div class="col-md-10">
                    <input asp-for="CurrentProduct.Name" class="form-control" placeholder="@Html.DisplayFor(model => model.CurrentProduct.Name)" />
                    <span asp-validation-for="CurrentProduct.Name" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CurrentProduct.Price" class="col-md-2 control-label">Price</label>
            <div class="col-md-10">
                <input asp-for="CurrentProduct.Price" class="form-control" placeholder="@Html.DisplayFor(model => model.CurrentProduct.Price)" />
                <span asp-validation-for="CurrentProduct.Price" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CurrentProduct.Description" class="col-md-2 control-label">Description</label>
            <div class="col-md-10">
                <input asp-for="CurrentProduct.Description" class="form-control" placeholder="@Html.DisplayFor(model => model.CurrentProduct.Description)" />
                <span asp-validation-for="CurrentProduct.Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-validation-for="CurrentProduct.ProductTypeId" class="col-md-2 control-label">Product Type</label>
            <div class="col-md-10">
                <span class="text-danger"></span>

                @Html.DropDownList("CurrentProduct.ProductTypeId", @Model.ProductTypes, "SELECT", new { @class = "dropdown" })

            </div>
        </div>

        @Html.Hidden("CurrentProduct.ProductId", Model.CurrentProduct.ProductId)
        @Html.Hidden("CurrentProduct.UserId", Model.getLoggedInUserId())

        <div class="form-group">
            <label asp-for="CurrentProduct.ProductSubTypeId" class="col-md-2 control-label">Sub Type</label>
            <div class="col-md-10">
                @Html.DropDownList("CurrentProduct.ProductSubTypeId", @Model.ProductSubTypes, "Select a Category")
                <span asp-validation-for="CurrentProduct.ProductSubTypeId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save Changes" class="btn btn-default" />
            </div>
        </div>

    </div>
</form>



<div>
    &lt;&lt; <a asp-controller="ProductTypes" asp-action="List" asp-route-id="@Model.CurrentProduct.ProductTypeId">Back to List</a>
</div>